<h3>任务详情</h3>

<p>
  <%= link_to '列表', tasks_path %>
  <%= link_to '删除', @task, method: :delete, data: { confirm: '确定删除？' } %>
</p>

<dl class="dl-horizontal">
  <dt>任务ID</dt>
  <dd><%= @task.job_id %></dd>

  <dt>采集配置</dt>
  <dd><%= @task.reader_config.name %></dd>

  <dt>状态</dt>
  <dd><%= @task.status_name %></dd>

  <% if @task.status == Task::ERROR %>
    <dt>错误</dt>
    <dd><%= @task.error %></dd>
  <% end %>
</dl>
<%= content_for :js do  %>
  <script type="text/javascript">
    $(function(){
      window.setTimeout(function(){
        location.href = location.href;
      }, 5000);
    });
  </script>
<% end %>